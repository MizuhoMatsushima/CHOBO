<div class="col-7 mx-auto mt-5">
  <div class="card">
    <div class="m-5">
      <h3 class="d-inline">相談一覧</h3>
      <div class="d-inline" style="">
        <%= link_to "相談する", new_consultation_path, class: "btn btn-secondary" %>
      </div>
      <%= render "search" %>
      <h4>"<%= params[:keyword] %>"の検索結果</h4>
      <table>
        <tbody>
          <% @consultation.each do |consultation| %>
            <tr>
              <td>
                <%= link_to consultation_path(consultation) do %>
                  <%= consultation.title %>
                <% end %>
              </td>
              <% consultation.tags.each do |tag| %>
                <td><%= tag.name %></td>
              <% end %>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>