<div class="col-lg-10 col-md-12 mt-5 mx-auto">
  <div class="card">
    <div class="m-5">
      <h3>収入の登録</h3>
      <%= form_with model: @account_book, url: account_books_path, method: :post do |f| %>
        <div class="form-group">
          <%= f.label :source_of_income_id, "収入元" %>
          <%= f.collection_select( :source_of_income_id, SourceOfIncome.all, :id, :source_name, {include_blank: "--選択して下さい--"}, {class: "form-control inpur-sm"}) %>
        </div>
        <div class="form-group">
          <%= f.label :income, "収入金額" %>
          <%= f.text_field :income, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :pay_day, "収入があった日" %>
          <%= f.date_field :pay_day, class:"form-control" %>
        </div>
        <%= f.submit "登録", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>