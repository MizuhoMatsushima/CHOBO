<div class="col-md-10 col-sm-12 my-5 mx-auto">
  <div class="card">
    <div class="m-5">
      <h2 class="text-center mb-4">登録情報編集</h2>
      <%= form_with model: @end_user, url: information_end_users_path(@end_user), local: true do |f| %>
        <%= render "layouts/error_count", resource: @end_user %>
        <table class="col-11 table edit" >
          <thead>
            <tr>
              <th class="col-4" style="border: none;"></th>
              <th style="border: none;"></th>
              <th class="col-3" style="border: none;"></th>
              <th style="border: none;"></th>
              <th class="col-3" style="border: none;"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td style="border: none;">氏名</td>
              <td class="align-top text-right pt-2" style="width: 40px; border: none;">
                <%= f.label :last_name, "(姓)" %>
              </td>
              <td style="border: none;">
                <%= f.text_field :last_name,autofocus: true, autocomplete: "last_name", :placeholder =>"朝暮", class: "form-control" %>
                <% if @end_user.errors.include?(:last_name) %>
                  <p class="text-danger"><%= @end_user.errors.full_messages_for(:last_name).first %>
                <% end %>
              </td>
              <td class="align-top text-right pt-2" style="width: 40px; border: none;">
                <%= f.label :first_name, "(名)" %>
              </td>
              <td style="border: none;">
                <%= f.text_field :first_name,autocomplete: "first_name", :placeholder =>"みなみ", class: "form-control" %>
                <% if @end_user.errors.include?(:first_name) %>
                  <p class="text-danger"><%= @end_user.errors.full_messages_for(:first_name).first %>
                <% end %>
              </td>
            </tr>
            <tr>
              <td style="border: none;">フリガナ</td>
              <td class="align-top text-right pt-2" style="border: none;">
                <%= f.label :last_name_kana, "(セイ)", style: "min-width: 40px;" %>
              </td>
              <td style="border: none;">
                <%= f.text_field :last_name_kana, autocomplete: "last_name_kana", :placeholder =>"アサクラ", class: "form-control" %>
                <% if @end_user.errors.include?(:last_name_kana) %>
                  <p class="text-danger"><%= @end_user.errors.full_messages_for(:last_name_kana).first %>
                <% end %>
              </td>
              <td class="align-top text-right pt-2" style="border: none;">
                <%= f.label :first_name_kana, "(メイ)", style: "min-width:40px;" %>
              </td>
              <td style="border: none;">
                <%= f.text_field :first_name_kana, autocomplete: "first_name_kana", :placeholder =>"ミナミ", class: "form-control" %>
                <% if @end_user.errors.include?(:first_name_kana) %>
                  <p class="text-danger"><%= @end_user.errors.full_messages_for(:first_name_kana).first %>
                <% end %>
              </td>
            </tr>
            <tr>
              <td style="border: none;"><%= f.label :phone_number, "電話番号" %></td>
              <td style="border: none;"></td>
              <td colspan="3" style="border: none;">
                <%= f.text_field :phone_number, :placeholder =>"0312345678", class: "form-control" %>
                <% if @end_user.errors.include?(:phone_number) %>
                  <p class="text-danger"><%= @end_user.errors.full_messages_for(:phone_number).first %>
                <% end %>
              </td>
            </tr>
            <tr>
              <td style="border: none;"><%= f.label :email, "メールアドレス" %></td>
              <td style="border: none;"></td>
              <td colspan="3" style="border: none;">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                <% if @end_user.errors.include?(:email) %>
                  <p class="text-danger"><%= @end_user.errors.full_messages_for(:email).first %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
        <div class="btn-center">
          <%= f.submit "登録情報更新", class: "btn btn-success mt-5 col-6" %>
        </div>
      <% end %>
    </div>
  </div>
</div>