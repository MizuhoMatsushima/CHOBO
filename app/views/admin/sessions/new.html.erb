<div class="my-5">
  <div class="card col-10 mx-auto">
    <div class="my-5 col-8 mx-auto">
      <div class="mb-5">
        <h2 class="mx-auto">管理者ログイン</h2>
        <% flash.each do |key, value| %>
          <%= content_tag :div, value, class: key, class: "text-danger" %>
        <% end %>
      </div>
      <div class="mx-auto">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group mx-auto mb-5">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"  %>
            <% if resource.errors.any?(:email) %>
              <p class="text-danger"><%= resource.errors.full_messages_for(:email).first %>
            <% end %>
          </div>

          <div class="form-group mx-auto">
            <%= f.label :password, "パスワード" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control"  %>
          </div>
          <div class="actions mt-5">
            <%= f.submit "ログイン", class: "btn btn-secondary col-12" %>
          </div>
        <% end %>
        <%= render "admin/shared/links" %>
      </div>
    </div>
  </div>
</div>