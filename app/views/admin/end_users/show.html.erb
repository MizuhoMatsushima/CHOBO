<div class="col-md-10 col-sm-12 my-5 mx-auto">
  <div class="card">
    <div class="m-5">
      <h2 class="text-center mb-4">利用者詳細画面</h2>
      <table class="table col-md-6 mx-auto">
        <tbody>
          <tr>
            <th width=150>氏名</th>
            <td height=50><%= @end_user.full_name %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td height=50><%= @end_user.full_name_kana %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td height=50><%= @end_user.phone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td height=50><%= @end_user.email %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <td height=50>
              <% if @end_user.is_deleted == false %>
                <div class="text-success font-weight-bold">有効</div>
              <% else %>
                <div class="text-secondary">退会</div>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="mx-auto my-5">
        <div class="text-center">
          <%= link_to "利用者情報の編集", edit_admin_end_user_path(@end_user), class: "btn btn-secondary col-6" %>
        </div>
      </div>
    </div>
  </div>
</div>