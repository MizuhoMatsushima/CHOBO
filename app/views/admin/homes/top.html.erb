<div class="col-lg-10 col-md-11 mx-auto mt-5">
  <div class="card">
    <div class="m-5">
      <h3 class="d-inline">利用者一覧画面</h3>
      <%= render "layouts/search", search_path: search_admin_end_users_path %>
      <table class="table mt-5">
        <thead>
          <tr>
            <th>氏名</th>
            <th>フリガナ</th>
            <th class="text-center">会員ステータス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @end_users.each do |end_user| %>
            <tr>

                <td>
                  <%= link_to admin_end_user_path(end_user) do %>
                    <%= end_user.full_name %>
                  <% end %>
                </td>
                <td>
                  <%= link_to admin_end_user_path(end_user) do %>
                    <%= end_user.full_name_kana %>
                  <% end %>
                </td>
              <td class="text-center">
                <% if end_user.is_deleted == false %>
                  <div class="text-danger font-weight-bold">有効</div>
                <% else %>
                  <div class="text-secondary">退会</div>
                <% end %>
              </td>
              <td><%= link_to "編集", edit_admin_end_user_path(end_user), class: "btn btn-secondary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="mb-5 mx-auto"><%= paginate @end_users %></div>
  </div>
</div>